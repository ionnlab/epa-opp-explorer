



function get_product() {

	var ri_num_value = $('#ri_num').val();
	
	var url = api_url + ":3000/products/" + ri_num_value;

	$.ajax({
	  type: "get",
	  url: url,
      crossDomain: true,
      success: function (data){
    	
    	product_data = data[0];
    	loadProduct();
      }

	});

};
	

  
