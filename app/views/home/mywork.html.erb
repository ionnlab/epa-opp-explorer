<!DOCTYPE html>

<html>
<head>


<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<%= javascript_include_tag "application" %>
<%= stylesheet_link_tag "application" %>

<script type="text/javascript">


    $( document ).ready(function() {

        function loadSearch(){

            fetch_decisions({
                "sm_uid" : "32574",
                "tables" : ["#my_decisions .decision_table"]
                });

        };

        loadSearch();



    });

</script>


</head>


<body>

    <div class="container">

    <%= render "head" %>
    
    <section id="reg_search">
        <header>
            <h2>
            My Work
            </h2>
        </header>

    </section>

     <section id="my_decisions">
         <div class="row">
             <div class="col-md-12">
                    <h3>Pending Decisions</h3>
             </div>
         </div>
         <div class="row">
            <div class="col-md-12">
                <table class="decision_table">

                </table>
            </div>


         </div>

     </section>

     <section id="past_decisions">
         <div class="row">
             <div class="col-md-12">
                    <h3>Past Decisions</h3>
             </div>
         </div>
         <div class="row">
            <div class="col-md-12">
                <table class="decision_table">
                    <tr>
                        <th>Dec#</th>
                        <th>Action</th>
                        <th>Status</th>
                        <th>Division</th>
                        <th>Person</th>
                        <th>FFS Start</th>
                        <th>Due Date</th>
                        <th></th>
                                                                                                       
                    </tr>
                </table>
            </div>


         </div>

     </section>     

    </div><!-- container -->

</body>