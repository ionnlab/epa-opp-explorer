<!DOCTYPE html>

<html>
<head>


<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<%= javascript_include_tag "application" %>
<%= stylesheet_link_tag "application" %>

<script type="text/javascript">


    $( document ).ready(function() {

       loadDecisions();  


    });

</script>


</head>


<body>

    <div class="container">

    <%= render "head" %>
    
    <section id="reg_search">
        <header>
            <h2>
            My Work
            </h2>
        </header>

    </section>

    <section id="product_header">
     <div class="row">
        <div class="col-md-12 h3" id="ri_name">
            
       </div>
     </div>

     <div class="row">
        <div class="col-md-4 field_label product_summary_label">
            Registration #:
        </div>
        <div class="col-md-8 product_summary_value">
            <div id="ri_number">
                 
            </div>
        </div>
     </div>

     <div class="row">
        <div class="col-md-4 field_label product_summary_label">
            Registration Type:
        </div>
        <div class="col-md-8 product_summary_value">
            <div id="ri_type">
                 
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-4 field_label  product_summary_label">
            Current Status:
        </div>
        <div class="col-md-8">
            <div id="ri_status">
                 
            </div>
        </div>
     </div>

     <div class="row">
        <div class="col-md-4 field_label product_summary_label">
            Company:
        </div>
        <div class="col-md-8" id="co_name">
            <div>
                 
            </div>
        </div>
     </div>
     </section>


     <section id="current_decision">
         <div class="row">
             <div class="col-md-12">
                    <h3>Current Decision</h3>
             </div>
         </div>
         <div class="row">
            <div class="col-md-12">
                <table class="decision_table">
                    <tr class="headrow">
                        <th>Dec#</th>
                        <th>Action</th>
                        <th>Status</th>
                        <th>Division</th>
                        <th>Person</th>
                        <th>FFS Start</th>
                        <th>Due Date</th>
                        <th></th>
                                                                                                       
                    </tr>
                </table>
            </div>


         </div>

     </section>

     <section id="past_decisions">
         <div class="row">
             <div class="col-md-12">
                    <h3>Past Decisions</h3>
             </div>
         </div>
         <div class="row">
            <div class="col-md-12">
                <table class="decision_table">
                    <tr>
                        <th>Dec#</th>
                        <th>Action</th>
                        <th>Status</th>
                        <th>Division</th>
                        <th>Person</th>
                        <th>FFS Start</th>
                        <th>Due Date</th>
                        <th></th>
                                                                                                       
                    </tr>
                </table>
            </div>


         </div>

     </section>     

    </div><!-- container -->

</body>