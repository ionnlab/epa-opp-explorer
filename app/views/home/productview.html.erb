<!DOCTYPE html>

<html>
<head>


<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<%= javascript_include_tag "application" %>
<%= stylesheet_link_tag "application" %>

<script type="text/javascript">


    $( document ).ready(function() {

        function loadSearch(){

            //clear out search results
            //$("#study_tiles").empty();

            fetch_product();
            fetch_decisions();

        };

        $("#search_click").click(loadSearch);  


    });

</script>


</head>


<body>

    <div class="container">

    <section id="reg_search">
        <header>
            <h2>
            Product View 
            </h2>
        </header>
        <div class="row">
            <div class="col-md-12">
                <form class="form-inline" id="product_search">
                    <div class="form-group">
                        <label for="mrid">Registration #</label><br>
                        <input type="text" class="form-control" id="ri_num">
                        <input id="search_click" type="button" class="btn btn-default" value="search">
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <ul id="study_tiles">

                </ul>
            <div>
        </div>
    </section>

    <section id="product_header1">
     <div class="row">
        <div class="col-md-12 h3" id="ri_name">
            Formula Batman Herbicide
       </div>
     </div>

     <div class="row">
        <div class="col-md-4 field_label">
            Registration #:
        </div>
        <div class="col-md-8">
            <div id="ri_number">
                 
            </div>
        </div>
     </div>

     <div class="row">
        <div class="col-md-4 field_label">
            Registration Type:
        </div>
        <div class="col-md-8">
            <div id="ri_type">
                 
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-4 field_label">
            Current Status:
        </div>
        <div class="col-md-8">
            <div id="ri_status">
                 
            </div>
        </div>
     </div>

     <div class="row">
        <div class="col-md-4 field_label">
            Company:
        </div>
        <div class="col-md-8" id="co_name">
            <div>
                 
            </div>
        </div>
     </div>
     </section>

     <section id="decisions">
         <div class="row">
            <table id="decision_history">
                <tr>
                    <th>Dec#</th>
                    <th>Item#</th>
                    <th>Start Dt</th>
                    <th>End Dt</th>
                    <th>Action</th>
                    <th>Reg Type</th>
                    <th>Reg Num</th>
                    <th>Name</th>
                    <th>Reviewer</th>
                    <th>Response</th>
                    <th></th>                                                                                                    
                </tr>
            </table>


         </div>

     </section>

    </div><!-- container -->

</body>